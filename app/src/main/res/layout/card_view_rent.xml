<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="36dp"
            android:layout_toEndOf="@+id/ivImage"
            android:text="TextView" />

            <ImageView
            android:id="@+id/ivImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/tvTitle"
            android:layout_marginStart="16dp"
            />
            <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvTitle"
            android:layout_below="@+id/tvTitle"
            android:layout_marginTop="15dp"
            android:text="TextView" />
            <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivImage"
            android:layout_alignStart="@+id/tvPrice"
            android:layout_marginBottom="12dp"
            android:text="TextView" />

            <Button
            android:id="@+id/btnCall"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tvLocation"
            android:background="@drawable/callnow"
                android:layout_margin="2dp"
            android:layout_centerHorizontal="true"
            />

            <Button
                android:id="@+id/bookmark"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBaseline="@+id/btnCall"
                android:layout_alignBottom="@+id/btnCall"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="40dp"
                android:background="@drawable/ic_star_border_black_24dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>